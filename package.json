    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.1.0",
    "eslint": "^8.50.0",
    "postcss": "^8.4.31",
    "postcss-nested": "^6.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.0",
